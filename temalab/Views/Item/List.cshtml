@model IEnumerable<temalab.Models.Item>

@{
    ViewBag.Title = "List";
}

<h2>List by @Model.ElementAtOrDefault(0).Category.Name</h2>

@foreach (var item in Model.Where(i => (i.End - DateTime.Now).Milliseconds > 0))
{
    <div class="row" style="border:solid; border-color:gray">
        <div class="col-md-4">
            <img src="@Url.Content(item.DefaultPic)" class="img-responsive" alt=@item.Name />
        </div>
        <div>
            <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
            <p>
                @Html.DisplayFor(modelItem => item.Description)
            </p>
            <p>@Html.DisplayNameFor(model => model.End):  @Html.DisplayFor(modelItem => item.End) </p>
            <p>@Html.DisplayNameFor(model => model.BiggestTip):  @Html.DisplayFor(modelItem => item.BiggestTip) Ft </p>

            <p>
                <a class="btn btn-default" href="/Item/Details/@item.ID">Details &raquo;</a>
            </p>
        </div>
    </div>
}
